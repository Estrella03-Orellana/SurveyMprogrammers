<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SurveyMprogrammers.SurveyDetailsView"
             Title="SurveyDetailsView">
    <VerticalStackLayout>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <StackLayout>
                <Label Text="Nombre"></Label>
                <Entry x:Name="NameEntry"></Entry>
                <Label Text="Fecha de Nacimiento"></Label>
                <DatePicker x:Name="BirthdatePicker"></DatePicker>
                <Label Text="Equipo Favorito"></Label>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="FavoriteTeamLabel"></Label>
                    <Button  Grid.Column="1" Text="..." Clicked="FavoriteTeam_Clicked"></Button>
                </Grid>
            </StackLayout>
            <Button Text="Aceptar" Grid.Row="1" Clicked="Ok_Clicked"></Button>
        </Grid>
    </VerticalStackLayout>
</ContentPage>